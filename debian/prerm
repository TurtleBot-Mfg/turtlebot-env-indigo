#!/bin/sh

if [ "$1" = remove ]; then
    rm /usr/share/glib-2.0/schemas/org.gnome.settings-daemon.plugins.power.gschema.xml
    dpkg-divert --package turtlebot-env-indigo --remove --rename \
        --divert /usr/share/glib-2.0/schemas/org.gnome.settings-daemon.plugins.power.gschema.xml.real /usr/share/glib-2.0/schemas/org.gnome.settings-daemon.plugins.power.gschema.xml
    rm /etc/default/avahi-daemon
    dpkg-divert --package turtlebot-env-indigo --remove --rename \
        --divert /etc/default/avahi-daemon.orig /etc/default/avahi-daemon
fi

#DEBHELPER#
